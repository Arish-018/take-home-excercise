
<h1>All Users</h1>

<table id="users">
	<thead>
		<tr>
			<th>Full Name</th>
			<th>Email</th>
			<th>Phone Number</th>
			<th>Company Name</th>
			<th>Company Address</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<th><%= user.full_name %></th>
			<th><%= user.email %></th>
			<th><%= user.phone_number %></th>
			<th><%= user.company_name %></th>
			<th><%= user.company_address %></th>
			<th><%= link_to "Edit", edit_user_path(user) %></th>
			<th><%= link_to "Delete", user, :method => :delete, :confirm => "Are you sure?" %></th>
		</tr>
		<% end %>
	</tbody>


</table>

<p><%= link_to "New User", new_user_path %></p>