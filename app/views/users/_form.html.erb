<div class="container">
  <div class="card mt-2">
    <div class="card-header bg-dark text-white">
      Account
    </div>
    <div class="card-body">
      <%= form_with(model: @user, local: true) do |form| %>
         <%= render 'shared/messages', object: @user %>
        <%= render "shared/error_messages", resource: @user %>
        <div class="form-group">
          <%= form.label :full_name %>
          <%= form.text_field :full_name, class: "form-control form-control-sm" %>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.email_field :email, class: "form-control form-control-sm" %>
        </div>

        <div class="form-group">
          <%= form.label :phone_number %>
          <%= form.text_field :phone_number, class: "form-control form-control-sm" %>
        </div>

        <div class="form-group">
          <%= form.label :company_name %>
          <%= form.text_field :company_name, class: "form-control form-control-sm" %>
        </div>

        <div class="form-group">
          <%= form.label :company_address %>
          <%= form.text_field :company_address, class: "form-control form-control-sm" %>
        </div>


        <div class="form-group d-flex justify-content-between mt-5">
          <%= form.submit "Submit", class: 'btn btn-sm btn-success'%>
          <%= link_to 'Back', users_path, class: 'btn btn-sm btn-warning'%>
        </div>
      <% end %>
    </div>
  </div>
</div>

