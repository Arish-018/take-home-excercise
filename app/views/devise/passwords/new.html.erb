<div class="d-flex justify-content-center">
  <div class="col-md-4 py-4">
    <div class="card card-sm card-outline-secondary">
      <div class="card-header bg-dark text-center py-2 text-white">
        Forgot your password?
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
           <div class='form-group d-flex justify-content-between'>
              <%= f.submit "Send me reset password instructions", class: 'btn btn-sm btn-success' %>
              <%= link_to "Back", new_user_session_path, class: 'btn btn-sm btn-warning float-left' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
